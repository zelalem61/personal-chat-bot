# Portfolio Bot - Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# OpenAI Configuration (REQUIRED)
# =============================================================================
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key-here

# Model to use for chat (default: gpt-4o-mini)
# Options: gpt-4o-mini, gpt-4o, gpt-4-turbo
OPENAI_MODEL=gpt-4o-mini

# Model to use for embeddings (default: text-embedding-3-small)
# Options: text-embedding-3-small, text-embedding-3-large, text-embedding-ada-002
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# =============================================================================
# ChromaDB Configuration
# =============================================================================
# Host and port where ChromaDB is running (Docker container)
CHROMA_HOST=localhost
CHROMA_PORT=8000

# Collection name for storing portfolio documents
CHROMA_COLLECTION=portfolio_docs

# =============================================================================
# API Configuration
# =============================================================================
# Host and port for the FastAPI server
API_HOST=0.0.0.0
API_PORT=8004

# =============================================================================
# RAG Configuration
# =============================================================================
# Document chunking settings
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# Number of documents to retrieve for context
NUM_DOCS_TO_RETRIEVE=5

# =============================================================================
# Logging
# =============================================================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
